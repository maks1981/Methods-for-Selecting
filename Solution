// Important Selector Methods we will use below important selectors for the next exercise 

document.getElementById() 
document.getElementsByClassName() 
document.getElementsByTagName() 
document.querySelector() 
document.querySelectorAll()


// Come up with 4 different ways to select the first <p> tag

<!DOCTYPE html>
<html>
<head>
	<title>My title</title>
</head>
<body>
	<h1>I am an h1!</h1>
	<p id="first" class="special">Hello</p>
	<p class="special">Goodbye</p>
	<p>Hi Again</p>
	<p id="last">Goodbye Again</p>
</body>
</html>

// How to select below examples

// 1
var body = document.querySelector("#first"); // enter
undefined
body // enter
<p id=​"first" class=​"special">​Hello​</p>​
// 2
var tag = document.getElementById("first"); // enter
undefined
tag // enter
<p id=​"first" class=​"special">​Hello​</p>​
// 3
var tag = document.querySelector(".special"); // enter
undefined
tag // enter
<p id=​"first" class=​"special">​Hello​</p>​
// 4
var tag = document.getElementsByClassName("special")[0] // enter
undefined
tag // enter
<p id=​"first" class=​"special">​Hello​</p>​
// 5
var tag = document.querySelectorAll(".special")[0] // enter
undefined
tag // enter
<p id=​"first" class=​"special">​Hello​</p>​
// 6
var x = document.getElementsByTagName("p")[0] // enter
undefined
x // enter
<p id=​"first" class=​"special">​Hello​</p>​
// 7
var tag = document.querySelector("p"); // enter
undefined
tag // enter
<p id=​"first" class=​"special">​Hello​</p>​
// 8
var tag = document.querySelectorAll("p")[0] // enter
undefined
tag // enter
<p id=​"first" class=​"special">​Hello​</p>​
// 9
var tag = document.querySelector("h1 + p"); // enter
undefined
tag // enter
<p id=​"first" class=​"special">​Hello​</p>​
